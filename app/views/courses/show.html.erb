<div class="course_show_div">
  <div class="course_show_top">
    <div class="course_show_top_time">
      <p><%= @course.start_date.strftime("%d/%m/%Y") %></p>
      <p><%= @course.start_time.strftime("%H:%M") %> - <%= @course.end_time.strftime("%H:%M") %></p>
    </div>
    <div class="course_show_top_name_language">
      <p><%= @course.name %>(<%= @course.language %>)</p>
    </div>
    <div class="course_show_top_register_number">
      <p> <%= @registers.count %> / <%= @course.max_register %></p>
    </div>
  </div>
  <div class="course_show_address">
    <p><%= @course.location.name %></p>
  </div>
  <div class="course_show_description">
    <p><%= @course.description %></p>
  </div>
  <div class="course_show_bottom">
    <div class="course_show_box">
      <h3>Dealers</h3>
      <% @dealers.each do |dealer| %>
        <p><%= dealer.user.first_name %> <%= dealer.user.last_name %></p>
      <% end %>
    </div>
    <div class="course_show_box">
      <h3>Teachers</h3>
      <% @teachers.each do |teacher| %>
        <p><%= teacher.user.first_name %> <%= teacher.user.last_name %></p>
      <% end %>
    </div>
    <div class="course_show_box">
      <h3>Participants</h3>
      <% @participants.each do |participant| %>
        <p><%= participant.user.first_name %> <%= participant.user.last_name %></p>
      <% end %>
      <% 10.times do |i| %>
        <p>Test <%= i %></p>
      <% end %>
    </div>
  </div>
</div>

