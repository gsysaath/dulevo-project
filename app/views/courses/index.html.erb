<h1>Courses Index</h1>
<% @courses.each do |course| %>
  <%= link_to course_path do %>
    <p>name: <%= course.name %> description: <%= course.description %> language: <%= course.language %></p>
    <p>status: <%= course.status %> start_date: <%= course.start_date %> start_time: <%= course.start_time %> end_time: <%= course.end_time %></p>
    <p>note: <%= course.note %> close: <%= course.close %> max_register: <%= course.max_register %></p>
    <p>courses_type_id: <%= course.courses_type_id %> location_id: <%= course.location_id %></p>
  <% end %>
  <p><%= link_to 'Edit Course', edit_course_path(course) %> </p>
<% end %>
<h2><%= link_to 'New Course', new_course_path %></h2>