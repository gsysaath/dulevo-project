<div class="form_roles_type">
  <% if action_name == 'new' %>
    <h4>Create a new course dealer</h4>
  <% elsif action_name == 'edit' %>
    <h4>Edit the course dealer</h4>
  <% end %>
  <%= simple_form_for ([@course, @dealer]) do |f| %>
    <%= f.association :user, collection: User.where(roles_type_code: 'D').order(:id) ,label_method: :full_name, value_method: :id, include_blank: false  %>
    <%= f.input :participate, collection: ['Y', 'N'], include_blank: false %>
    <div class="buttons">
      <%= link_to "Cancel", courses_path, {:class=>"btn-cancel"} %>
      <% if action_name == "new" %>
        <%= f.button :submit, 'Create', {:class=>"btn-save"} %>
      <% elsif action_name == "edit" %>
        <%= f.button :submit, 'Edit', {:class=>"btn-save"} %>
      <% end %>
    </div>
  <% end %>
</div>
