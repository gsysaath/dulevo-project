<%= simple_form_for ([@course, @manager]) do |f| %>
  <%= f.association :user, collection: User.where(roles_type_code: 'A').order(:id) ,label_method: :full_name, value_method: :id, include_blank: false  %>
  <%= f.input :participate, collection: ['Y', 'N'], include_blank: false %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>