<div class="form_roles_type">
  <% if action_name == "new" %>
    <h4>Create a new roles type</h4>
  <% elsif action_name == "edit" %>
    <h4>Edit the roles type</h4>
  <% end %>
  <%= simple_form_for @register_type do |f| %>
    <%= f.input :code %>
    <%= f.input :nameIT %>
    <%= f.input :nameEN %>
    <%= f.input :nameFR %>
    <%= f.input :nameDE %>
    <%= f.input :nameES %>
    <div class="buttons">
      <%= link_to "Cancel", register_types_path, {:class=>"btn-cancel"} %>
      <% if action_name == "new" %>
        <%= f.button :submit, 'Create', {:class=>"btn-save"} %>
      <% elsif action_name == "edit" %>
        <%= f.button :submit, 'Edit', {:class=>"btn-save"} %>
      <% end %>
    </div>
  <% end %>
</div>