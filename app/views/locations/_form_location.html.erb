<div class="form-location">
  <% if action_name == "new" %>
    <h4>Create a new location</h4>
  <% elsif action_name == "edit" %>
    <h4>Edit the location</h4>
  <% end %>
  <%= simple_form_for @location do |f| %>
    <%= f.input :name, placeholder: '10 place Andre Malraux, 75001 Paris' %>
    <div class="location-inputs">
    <%= f.input :nation, placeholder: 'France' %>
    <%= f.input :language, collection: @languages, include_blank: false%>
    </div>
    <div class="buttons">
      <%= link_to "Cancel", :back, {:class=>"btn-cancel"} %>
      <% if action_name == "new" %>
        <%= f.button :submit, 'Create', {:class=>"btn-save"} %>
      <% elsif action_name == "edit" %>
        <%= f.button :submit, 'Edit', {:class=>"btn-save"} %>
      <% end %>
    </div>
  <% end %>
</div>
