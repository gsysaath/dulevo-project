<div class="top-choice">
  <%= link_to 'Back to Course', course_path(@course), class: "btn btn-outline-primary" %>
  <%= link_to '#', class:"btn btn-outline-primary" do %>
    Send Email All
  <% end %>
  <%= link_to new_course_courses_teacher_path(@course), class:"btn btn-success" do %>
    Add Teacher
  <% end %>
</div>
<div class="locations_index_table">
  <table>                         
    <tr>                          
      <th>Name</th>
      <th>Participate</th>
      <th>Email</th>
    </tr>
  <% @teachers.each do |teacher| %>
    <tr>
      <td>
        <%= teacher.user.full_name %>
      </td>
      <td>
        <%= teacher.participate %>
      </td>
      <td>
        <%= teacher.user.email %>
      </td>
      <td>
        <%= link_to 'Send Mail', '#' %> | 
        <%= link_to 'Edit', edit_course_courses_teacher_path(@course, teacher) %> | 
        <%= link_to 'Delete', courses_teacher_path(teacher), method: :delete, data: {confirm: "Are you sure"} %>
      </td>
    </tr>
  <% end %>
  </table> 
</div>
