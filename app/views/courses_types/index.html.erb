<%= render 'shared/navbar_settings' %>

<div class="div_btn_add">
  <%= link_to new_courses_type_path, class:"btn_add" do %>
    <p><strong>+</strong> Courses Type</p>
  <% end %>
</div>

<div class="locations_index_table">
  <table>                         
    <tr>                          
      <th>Note</th>
      <th>Image path</th>
    </tr>
  <% @courses_types.each do |course| %>
    <tr>
      <td><%= course.note %></td>
      <td><%= course.image_path %></td>
      <td><%= link_to 'Edit', edit_courses_type_path(course) %></td>
    </tr>
  <% end %>
  </table> 
</div>

<% image_path = "app/assets/images/120.png" %> 
<% if File.exist?(image_path) %> 
  <%= image_tag '120.png', width: '400', height: '300' %>
<% else %>
  <%= image_tag "#{CoursesType.last.image_path}.png", width: '400', height: '300' %>
<% end %>
<%= image_tag "#{CoursesType.last.image_path}.png", width: '400', height: '300' %>
